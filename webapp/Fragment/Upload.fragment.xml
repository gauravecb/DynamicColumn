<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" 	xmlns:u="sap.ui.unified">
	<Dialog id="uploadCSV" title="Upload CSV">
		<content>
			<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server"
				uploadComplete="handleUploadComplete"/>
		</content>
		<beginButton>
			<Button text="Upload" press = "handleUpload"></Button>
		</beginButton>
		<endButton>
			<Button text="Cancel" press = "handleCancel"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>